<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    tools:context="edu.lclark.githubfragmentapplication.fragments.TabFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        cardview:cardCornerRadius="4dp"
        cardview:cardElevation="4dp">

        <ImageView
            android:id="@+id/fragment_tab_imageview"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:contentDescription="Github User Image" />
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        cardview:cardCornerRadius="4dp"
        cardview:cardElevation="4dp">


        <TextView
            android:id="@+id/fragment_tab_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:textSize="26sp"
            tools:text="1800Blarbo"
            />

    </android.support.v7.widget.CardView>


</LinearLayout>
