<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.lclark.githubfragmentapplication.activities.LoginActivity">


    <EditText
        android:id="@+id/login_activity_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/login_user_name_hint"
        android:textAlignment="center"
        android:layout_centerInParent="true"

        />
    <Button
        android:id="@+id/login_activity_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_activity_user_name"
        android:text="@string/login_sign_in_button"
        />

    <ProgressBar
        android:id="@+id/login_activity_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_below="@id/login_activity_login_button"
        android:visibility="invisible"
        android:indeterminate="true"
        />
    <ImageView
        android:id="@+id/login_activity_github_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/github_logo"
        android:contentDescription="@string/github_logo" />

</RelativeLayout>
